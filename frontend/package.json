{
  "name": "jaquard-frontend",
  "author": "Stirfire Studios",
  "productName": "Jaquard",
  "version": "0.1.0",
  "private": true,
  "main": "public/electron.js",
  "build": {
    "appId": "com.jaquard",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories":{
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "babel-eslint": "^8.2.2",
    "classnames": "^2.2.5",
    "electron-is-dev": "^0.3.0",
    "electron-packager": "^11.1.0",
    "electron": "^1.8.3",
    "eslint": "^4.18.1",
    "material-ui": "^1.0.0-beta.34",
    "material-ui-icons": "^1.0.0-beta.17",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.1.1"
  },
  "scripts": {
    "start": "webpack-dev-server --config webpack.config.js",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "lint": "node ./node_modules/eslint/bin/eslint.js --fix --ext .js ./src",
    "electron-pack": "build --em.main=public/electron.js",
    "preelectron-pack": "yarn build",
    "electron-dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "package-mac": "electron-packager ./src --overwrite --platform=darwin --arch=x64 --prune=true --out=dist",
    "package-win": "electron-packager ./src jaquard --overwrite --asar=true --platform=win32 --arch=ia32 --prune=true --out=dist --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Jaquard\"",
    "package-linux": "electron-packager ./src jaquard --overwrite --asar=true --platform=linux --arch=x64 --prune=true --out=dist"
  },
  "devDependencies": {
    "concurrently": "^3.5.1",
    "electron-builder": "^20.4.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "wait-on": "^2.1.0"
  }
}
