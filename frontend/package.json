{
  "name": "jaquard-frontend",
  "author": "Stirfire Studios",
  "productName": "Jaquard",
  "description": "Yarn-based narrative tool!",
  "version": "0.1.1",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "build": {
    "appId": "com.jaquard",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "@material-ui/icons": "^1.0.0-beta.43",
    "bondage": "^1.0.4",
    "classnames": "^2.2.5",
    "electron-is-dev": "^0.3.0",
    "jacquard-yarnparser": "^0.3.4",
    "material-ui": "^1.0.0-beta.34",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.2.2",
    "uuid": "^3.2.1"
  },
  "scripts": {
    "test": "react-app-rewired test --env=jsdom",
    "eject": "react-scripts eject",
    "lint": "node ./node_modules/eslint/bin/eslint.js --fix --ext .js ./src",
    "dev-start": "concurrently \"BROWSER=none react-app-rewired start\" \"wait-on http://localhost:3000 && electron .\"",
    "dev-start-win": ".\\node_modules\\.bin\\concurrently \"set BROWSER=none&&react-app-rewired start\" \".\\node_modules\\.bin\\wait-on http://localhost:3000 && .\\node_modules\\.bin\\electron .\"",
    "prd-pack": "react-app-rewired build && electron-builder",
    "prd-pack-win32": "react-app-rewired build && copy .\\assets\\icon.png .\\build\\ && electron-builder --win --ia32",
    "prd-pack-win64": "react-app-rewired build && copy .\\assets\\icon.png .\\build\\ && electron-builder --win --x64",
    "prd-pack-mac": "react-app-rewired build && cp ./assets/icon.png ./build/ && electron-builder --mac --x64",
    "prd-pack-linux": "react-app-rewired build && cp ./assets/icon.png ./build/ && electron-builder --linux --x64"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.3",
    "concurrently": "^3.5.1",
    "electron": "^1.8.4",
    "electron-builder": "^20.10.0",
    "electron-devtools-installer": "^2.2.3",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "react-app-rewired": "1.5.2",
    "react-scripts": "^1.1.4",
    "wait-on": "^2.1.0"
  }
}
